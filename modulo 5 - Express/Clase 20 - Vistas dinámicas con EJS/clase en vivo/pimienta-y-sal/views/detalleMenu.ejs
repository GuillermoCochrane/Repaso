<%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/header.ejs") %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu<%= plato.id %>">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= plato.nombre %></h1>
          <br />
          <% if (plato.detalle == "" || plato.detalle == undefined) { %>

            <h4>Plato t√≠pico.</h4>

          <% } else  { %>

            <h4><%= plato.detalle %></h4>

          <% } %>
          
          <p class="ps-text-grey">
            U$S <%= plato.precio %>
          </p>
          <br>
          <a href="/"><button>Volver</button></a>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= plato.imagen %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu-<%= plato.id %>"
            width="720"
          />
        </div>
      </div>

      <%- include("./partials/footer.ejs") %>
    </div>
  </body>
</html>
