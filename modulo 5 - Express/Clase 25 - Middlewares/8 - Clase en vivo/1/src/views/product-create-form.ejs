<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de creación de productos</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products" method="post" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= locals.oldData ? oldData.name : null %>">
						<% if (locals.errors && errors.name) { %>
							<p style="color: tomato; margin-left: 15px; font-size: 15px;"><%= errors.name.msg %></p>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= locals.oldData ? oldData.price : null %>">
						<% if (locals.errors && errors.price) { %>
							<p style="color: tomato; margin-left: 15px; font-size: 15px;"><%= errors.price.msg %></p>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%= locals.oldData ? oldData.discount : null %>">
						<% if (locals.errors && errors.discount) { %>
							<p style="color: tomato; margin-left: 15px; font-size: 15px;"><%= errors.discount.msg %></p>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="in-sale"<%= locals.oldData && oldData.category == "in-sale" ? "selected" : null %>>En oferta</option>
							<option value="visited" <%= locals.oldData && oldData.category == "visited" ? "selected" : null %>>Últimos agregados</option>
						</select>
						<% if (locals.errors && errors.category) { %>
							<p style="color: tomato; margin-left: 15px; font-size: 15px;"><%= errors.category.msg %></p>
						<% } %>
					</div>
					<div class="col-12">
						<label for="productImg" class="form-label">Imagen del Producto:</label>
						<input type="file" id="productImg" name="productImg" placeholder="Ej: Zapatillas Reebok" class="form-input">
					</div>
					<h2 class="products-title" style="color: tomato; margin-left: 15px; font-size: 15px;"><%= locals.error ? error : null %></h2>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= locals.oldData ? oldData.description : null %></textarea>
						<% if (locals.errors && errors.description) { %>
							<p style="color: tomato; margin-left: 15px; font-size: 15px;"><%= errors.description.msg %></p>
						<% } %>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>