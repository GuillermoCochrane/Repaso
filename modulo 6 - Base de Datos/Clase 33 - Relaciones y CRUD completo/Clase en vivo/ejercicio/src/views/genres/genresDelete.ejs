<%- include('../partials/head') -%>

<body>
    <%- include('../partials/header') -%>

    <% 
        let action = data.confirm ? `/genres/confirmDelete/${Genre.id}` : `/genres/delete/${Genre.id}`;
        let message = data.confirm 
            ? `El género ${Genre.name} contiene películas asociadas. ¿Estás seguro de querer borrarlo?`
            : `¿Estás seguro de querer borrar este Género: ${Genre.name}?`; 
    %>

    <h1><%= message %></h1>
    <form action="<%= action %>" method="POST">
        <br>
        <p> 
            <button class="botonBorrar" type="submit">Borrar el Género</button>
            <a class="botonVolver" href="/genres">Listado de Géneros</a>
        </p>
    </form>
</body>
</html>