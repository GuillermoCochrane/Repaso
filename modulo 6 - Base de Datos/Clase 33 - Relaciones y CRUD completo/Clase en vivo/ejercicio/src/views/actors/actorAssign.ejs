<%- include('../partials/head') -%>
<body>

    <%- include('../partials/header') -%>

    <%- include('../partials/ButtonsHeaderMovies.ejs') -%>

    <h1 class="titulo"><%= data.title %></h1>
    <br>
    <section >
        <form action="/actors/assign/<%= actor.id %>" method="POST" class="assign">
            <select name="movie_id" id="movie_id" required>
                <option value="" disabled  selected > - Seleccionar Pel√≠cula - </option>
                    <% movies.forEach(movie => { %>
                        <option value="<%= movie.id %>" >
                            <%= movie.title %>
                        </option>
                    <% }); %>
            </select>

            <br>

            <section class="botones"> 
                <button class="botonAgregar" type="submit">Agregar</button>
                <a  class="botonVolver" href="/actors">Listado de Actores</a>
            </section>

        </form>
    </section>
    
</body>

</html>