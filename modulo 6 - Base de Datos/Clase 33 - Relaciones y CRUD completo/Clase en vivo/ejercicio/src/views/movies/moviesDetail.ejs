<%- include('../partials/head') -%>
<body>
    <%- include('../partials/header') -%>
    
    <%- include ('../partials/ButtonsHeaderMovies.ejs') %>
    
    <%- include('../partials/title') -%>

    <p>RATING: <%= movie.rating %> </p>
    <p>AWARDS: <%= movie.awards %> </p>
    <p>LENGTH: <%= movie.length + ' min'%> </p>
    <p>RELEASE DATE: <%= movie.release_date %> </p>
    <p>GENRE: <%= movie.genero.name %> </p>
    <br>

    <hr>
    <h3>Actores</h3>
    <br>
    <ul>
        <% for (const actor of movie.actores) { %>
            <li class="sublista">
                <a href="/actors/detail/<%= actor.id %>"><%= actor.first_name %> <%= actor.last_name %></a> 
                <a href="/movies/remove/<%= movie.id %>/<%= actor.id %>">
                    <button class="botonBorrar"> Eliminar </button>
                </a>
            </li>
        <% } %>
    </ul>
    <br>
    <hr>

    <%- include ('../partials/ButtonsFooter.ejs') %>

</body>
</html>